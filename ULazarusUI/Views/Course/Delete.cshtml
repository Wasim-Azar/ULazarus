@model ULazarusData.Models.Course

@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Course</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this course?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Faculty</dt>
        <dd class="col-sm-10">@Model.Faculty?.Name</dd>

        <dt class="col-sm-2">Sector</dt>
        <dd class="col-sm-10">@Model.Sector?.Name</dd>

        <dt class="col-sm-2">Teacher</dt>
        <dd class="col-sm-10">@Model.Teacher?.FirstName @Model.Teacher?.LastName</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="CourseId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
