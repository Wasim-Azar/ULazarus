@model ULazarusData.Models.Student
@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<h3>Are you sure you want to delete this student?</h3>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Faculty</dt>
        <dd class="col-sm-10">@Model.Faculty?.Name ?? "N/A"</dd>
        <dt class="col-sm-2">Schedule Location</dt>
        <dd class="col-sm-10">@Model.Schedule?.Location ?? "N/A"</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="StudentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
